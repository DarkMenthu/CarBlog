<% if(article != null ) { %>
<!-- breadcrumb -->
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Home</a></li>
      <li class="breadcrumb-item active" aria-current="page"><%- article.name %></li>
    </ol>
    <a href="/views/edit/<%= article._id %>" class="btn btn-info mb-1">Edit</a>
    <form action="/articles/<%= article.id %>?_method=DELETE" method="POST" class="d-inline">
      <button type="submit" class="btn btn-danger">Delete</button>
    </form>
  </nav>
<!-- article info -->
  <div class="row">
    <div class="col-12 col-md-8">
      <div class="row">
        <div class="col-12"><h1><%- article.name %></h1></div>
        <div class="col-12 mb-4"><i class="bi bi-tag"></i> <%- article.category %></div>
        <div class="card-subtitle text-muted mb-2">
          <%= article.createdAt.toLocaleString() %>
        </div>
        <div class="col-12" style="white-space: pre-line;">
          <h3>Description</h3>
          <%- article.description %>
        </div>
      </div>

      <div class="row pt-4">
        <div class="col-12">
          <h4>Specs</h4>
          <ul class="list-group list-group-flush">
            <% article.specs.forEach(function(specs, index){ %>
              <li class="list-group-item"><%= specs %></li>
            <% }) %>
          </ul> 
        </div>
      </div>
    </div>
  </div>
<% } else { %>
  <p>No item found.</p>
<% } %>